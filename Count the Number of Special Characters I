class Solution {
public:
    int numberOfSpecialChars(string word) {
        set<int> st1;
        set<int> st2;
        for(auto i: word){
            if(i>='a' && i<='z')
               st1.insert(i - 'a');
            else
               st2.insert(i - 'A');   
        }
        int cnt = 0;
        for(auto i : st1){
            if(st2.find(i) != st2.end()){
                cnt++;
            }
        }
        return cnt;
    }
};
